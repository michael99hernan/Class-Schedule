@model SchedulePicker.ViewModels.StudentCourseViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
    tr.row_selected td {
        background-color: #2E86C1 !important;
    }

</style>
<div>

    <h1>Courses</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-6">

                <div class="card border-primary mb-2 mt-5 ">
                    <div class="card-header bg-primary text-white">
                        <b>Courses Taken</b>
                    </div>
                    <div class="card-body">
                        <table id="StudentCoursesTable" class="table table-striped table-bordered">
                            <thead>

                                <tr class="">
                                    <th>
                                        Course
                                    </th>
                                    <th>
                                        Number
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Credits
                                    </th>

                                </tr>
                            </thead>
                        </table>
                    </div>
                    <button class="btn btn-danger " id="DeleteButton">Remove Course</button>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-6">
                <div class="card border-primary mt-5 mb-2">
                    <div class="card-header bg-primary text-white">
                        <b>Courses Needed</b>
                    </div>
                    <div class="card-body">
                        <table id="StudentCoursesNeededtable" class="table table-striped table-bordered">
                            <thead>
                                <tr class="">
                                    <th>
                                        Course
                                    </th>
                                    <th>
                                        Number
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Credits
                                    </th>
                                    <th>
                                        Course Type
                                    </th>
                                </tr>
                            </thead>


                        </table>
                    </div>
                    <button class="btn btn-success" id="AddButton">Add Course</button>

                </div>
            </div>
        </div>
    </div>
    <div></div>
</div>

@section scripts{

    <script src="~/View/StudentCourses/Index.js" asp-append-version="true"></script>
}