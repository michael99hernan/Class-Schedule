@model List<SchedulePicker.ViewModels.UserRoleViewModel>

@{ 
    var RoleId = ViewBag.roleId;
}
    <form method="post">
        <div class="card mb-3">
            <div class="card-header">
                <h3>Add or remove users from this role</h3>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />

                    <div class="form-check ml-1 mr-1"></div>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
                <a asp-controller="admin" asp-action="EditRole" asp-route-Id="@RoleId" class="btn btn-danger" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>